# ===========================================
# VARIABLES DE ENTORNO PARA PRODUCCIÓN
# Sistema Híbrido Full-Stack Ultra Mejorado
# ===========================================

# Configuración de la aplicación
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Base de datos
DATABASE_URL=postgresql://user:password@localhost:5432/politica_argentina
DB_HOST=localhost
DB_PORT=5432
DB_NAME=politica_argentina
DB_USER=user
DB_PASSWORD=password

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# APIs de IA
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# URLs
PUBLIC_BASE_URL=https://politicaargentina.com
API_BASE_URL=https://politicaargentina.com/api

# SEO
SITE_NAME=Política Argentina
SITE_DESCRIPTION=Portal de noticias políticas en Argentina
SITE_KEYWORDS=política, argentina, noticias, actualidad
SITE_AUTHOR=Política Argentina
SITE_IMAGE=https://politicaargentina.com/og-image.jpg

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Social Media
TWITTER_HANDLE=@politicaarg
FACEBOOK_PAGE=https://facebook.com/politicaarg
INSTAGRAM_PAGE=https://instagram.com/politicaarg

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# CDN
CDN_URL=https://cdn.politicaargentina.com
ASSETS_URL=https://assets.politicaargentina.com

# Multi-idiomas
DEFAULT_LANGUAGE=es
SUPPORTED_LANGUAGES=es,en,fr,pt
I18N_FALLBACK_LANGUAGE=es

# Performance
CACHE_TTL=3600
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Security
CORS_ORIGIN=https://politicaargentina.com
CORS_CREDENTIALS=true
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# Monitoring
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your-new-relic-key-here

# Features
AI_TRANSLATION_ENABLED=true
AUTOMATION_ENABLED=true
ANALYTICS_ENABLED=true
SEO_ENABLED=true
PWA_ENABLED=true
OFFLINE_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=true
