# ===========================================
# CONFIGURACIÓN DE APIs DE IA
# Sistema Híbrido Full-Stack Ultra Mejorado
# ===========================================

# OpenAI API (GPT-4, GPT-3.5-turbo)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORGANIZATION=your-openai-organization-id
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic API (Claude 3.5 Sonnet)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google AI API (Gemini Pro)
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-pro

# Configuración de traducción automática
TRANSLATION_PROVIDER=openai
TRANSLATION_MODEL=gpt-4-turbo-preview
TRANSLATION_TEMPERATURE=0.3
TRANSLATION_MAX_TOKENS=4000

# Configuración de análisis de contenido
CONTENT_ANALYSIS_PROVIDER=anthropic
CONTENT_ANALYSIS_MODEL=claude-3-5-sonnet-20241022
CONTENT_ANALYSIS_TEMPERATURE=0.2

# Configuración de optimización SEO
SEO_OPTIMIZATION_PROVIDER=google
SEO_OPTIMIZATION_MODEL=gemini-pro
SEO_OPTIMIZATION_TEMPERATURE=0.1

# Configuración de generación de contenido
CONTENT_GENERATION_PROVIDER=openai
CONTENT_GENERATION_MODEL=gpt-4-turbo-preview
CONTENT_GENERATION_TEMPERATURE=0.7

# Límites de rate limiting
RATE_LIMIT_OPENAI=100
RATE_LIMIT_ANTHROPIC=50
RATE_LIMIT_GOOGLE=200

# Timeouts
TIMEOUT_OPENAI=30000
TIMEOUT_ANTHROPIC=30000
TIMEOUT_GOOGLE=30000

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY=1000

# Fallback configuration
FALLBACK_PROVIDER=openai
FALLBACK_MODEL=gpt-3.5-turbo

# Cache configuration
CACHE_ENABLED=true
CACHE_TTL=3600000
CACHE_MAX_SIZE=1000

# Logging
LOG_LEVEL=info
LOG_REQUESTS=true
LOG_RESPONSES=false
LOG_ERRORS=true

# Monitoring
MONITORING_ENABLED=true
METRICS_ENABLED=true
ALERTS_ENABLED=true

# Security
API_KEY_ROTATION_ENABLED=false
API_KEY_ROTATION_INTERVAL=30
API_KEY_BACKUP_ENABLED=true

# Multi-idiomas
SUPPORTED_LANGUAGES=es,en,fr,pt
DEFAULT_LANGUAGE=es
FALLBACK_LANGUAGE=es

# Traducción automática
AUTO_TRANSLATE_ENABLED=true
AUTO_TRANSLATE_QUALITY=high
AUTO_TRANSLATE_SPEED=balanced

# Análisis de sentimientos
SENTIMENT_ANALYSIS_ENABLED=true
SENTIMENT_ANALYSIS_PROVIDER=openai
SENTIMENT_ANALYSIS_MODEL=gpt-4-turbo-preview

# Detección de fake news
FAKE_NEWS_DETECTION_ENABLED=true
FAKE_NEWS_DETECTION_PROVIDER=anthropic
FAKE_NEWS_DETECTION_MODEL=claude-3-5-sonnet-20241022

# Optimización de contenido
CONTENT_OPTIMIZATION_ENABLED=true
CONTENT_OPTIMIZATION_PROVIDER=google
CONTENT_OPTIMIZATION_MODEL=gemini-pro

# Generación de títulos
TITLE_GENERATION_ENABLED=true
TITLE_GENERATION_PROVIDER=openai
TITLE_GENERATION_MODEL=gpt-4-turbo-preview

# Generación de extractos
EXCERPT_GENERATION_ENABLED=true
EXCERPT_GENERATION_PROVIDER=anthropic
EXCERPT_GENERATION_MODEL=claude-3-5-sonnet-20241022

# Generación de tags
TAG_GENERATION_ENABLED=true
TAG_GENERATION_PROVIDER=google
TAG_GENERATION_MODEL=gemini-pro

# Optimización SEO
SEO_OPTIMIZATION_ENABLED=true
SEO_OPTIMIZATION_PROVIDER=openai
SEO_OPTIMIZATION_MODEL=gpt-4-turbo-preview

# Análisis de tendencias
TREND_ANALYSIS_ENABLED=true
TREND_ANALYSIS_PROVIDER=anthropic
TREND_ANALYSIS_MODEL=claude-3-5-sonnet-20241022

# Recomendaciones de contenido
CONTENT_RECOMMENDATIONS_ENABLED=true
CONTENT_RECOMMENDATIONS_PROVIDER=google
CONTENT_RECOMMENDATIONS_MODEL=gemini-pro
