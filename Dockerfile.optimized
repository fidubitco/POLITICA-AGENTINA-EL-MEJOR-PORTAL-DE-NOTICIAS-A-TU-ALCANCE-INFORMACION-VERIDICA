# üê≥ DOCKERFILE OPTIMIZADO - ENTERPRISE GRADE
# Multi-stage build para minimizar tama√±o de imagen

# ============================================
# Stage 1: Dependencies
# ============================================
FROM node:20-alpine AS deps
LABEL maintainer="Pol√≠tica Argentina <admin@politicaargentina.com>"
LABEL description="Portal de noticias pol√≠ticas de Argentina - Dependencies"

WORKDIR /app

# Instalar pnpm
RUN npm install -g pnpm@9.1.4

# Copiar archivos de dependencias
COPY package.json pnpm-lock.yaml ./

# Instalar dependencias (solo production)
RUN pnpm install --frozen-lockfile --prod

# ============================================
# Stage 2: Builder
# ============================================
FROM node:20-alpine AS builder
LABEL description="Portal de noticias pol√≠ticas de Argentina - Builder"

WORKDIR /app

# Instalar pnpm
RUN npm install -g pnpm@9.1.4

# Copiar archivos de dependencias
COPY package.json pnpm-lock.yaml ./

# Instalar TODAS las dependencias (incluidas dev)
RUN pnpm install --frozen-lockfile

# Copiar c√≥digo fuente
COPY . .

# Build del frontend
RUN pnpm build

# Build del backend
RUN pnpm build:backend

# ============================================
# Stage 3: Runner (Imagen final)
# ============================================
FROM node:20-alpine AS runner
LABEL description="Portal de noticias pol√≠ticas de Argentina - Production"

WORKDIR /app

# Crear usuario no-root para seguridad
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nextjs

# Instalar solo runtime dependencies
RUN apk add --no-cache \
    tini \
    curl \
    && rm -rf /var/cache/apk/*

# Copiar dependencias de producci√≥n
COPY --from=deps --chown=nextjs:nodejs /app/node_modules ./node_modules

# Copiar archivos build
COPY --from=builder --chown=nextjs:nodejs /app/public ./public
COPY --from=builder --chown=nextjs:nodejs /app/dist ./dist
COPY --from=builder --chown=nextjs:nodejs /app/package.json ./package.json

# Variables de entorno
ENV NODE_ENV=production
ENV PORT=3000

# Exponer puerto
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:3000/ || exit 1

# Cambiar a usuario no-root
USER nextjs

# Usar tini como init system
ENTRYPOINT ["/sbin/tini", "--"]

# Comando de inicio
CMD ["node", "dist/index.js"]

