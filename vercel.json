{
  "framework": null,
  "buildCommand": "pnpm install && pnpm build",
  "outputDirectory": "public",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install",
  "rewrites": [
    {
      "source": "/((?!assets|images|locales|favicon|logo|manifest|robots|sitemap|sw.js).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}